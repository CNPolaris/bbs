<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.polaris.bbs.mapper.BbsReplyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.polaris.bbs.pojo.BbsReply">
        <id column="id" property="id" />
        <result column="topic_id" property="topicId" />
        <result column="create_user" property="createUser" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="create_time" property="createTime" />
        <result column="parent_comment_id" property="parentCommentId" />
        <result column="comment_level" property="commentLevel" />
        <result column="ip" property="ip" />
        <result column="address" property="address" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, topic_id, create_user, title, content, create_time, parent_comment_id, comment_level, ip, address
    </sql>

    <select id="selectOneComment" parameterType="com.polaris.bbs.dto.reply.ReplySearchParam" resultType="java.util.List">
        select * from bbs_reply
        where
              topic_id = #{topicId}
            and
              comment_level = #{commentLevel}
        order by
            create_time desc
    </select>

    <select id="selectTwoComment" parameterType="com.polaris.bbs.dto.reply.ReplySearchParam" resultType="java.util.List">
        select * from bbs_reply
        where
              parent_comment_id = #{parentCommentId}
            and
              topic_id = #{topicId}
            and
              comment_level = #{commentLevel}
        order by
            create_time desc
    </select>
</mapper>

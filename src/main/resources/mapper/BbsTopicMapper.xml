<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.polaris.bbs.mapper.BbsTopicMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.polaris.bbs.pojo.BbsTopic">
        <id column="id" property="id" />
        <result column="section_id" property="sectionId" />
        <result column="create_user" property="createUser" />
        <result column="reply_count" property="replyCount" />
        <result column="read_count" property="readCount" />
        <result column="title" property="title" />
        <result column="content_id" property="contentId" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, section_id, create_user, reply_count, read_count, title, content_id, status, create_time
    </sql>

    <update id="updateTopic" parameterType="com.polaris.bbs.dto.topic.TopicEdit">
        update bbs_topic
        <set>
            <if test="status !=null">
                staus = #{status,jdbcType=INTEGER}
            </if>
            <if test="sectionId != null">
                section_id = #{sectionId}
            </if>
            <if test="title != null">
                title = #{title, jdbcType=VARCHAR}
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>
